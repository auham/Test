rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // القواعد للزوار (قراءة فقط)
    match /weddings/{wedding} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /news/{news} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /notifications/{notification} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /reminders/{reminder} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // القواعد لـ FCM Tokens (للمستخدمين المسجلين فقط)
    match /fcmTokens/{token} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // القواعد لـ userTokens (متروكة للتوافق مع الإصدار القديم)
    match /userTokens/{token} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
