rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // السماح للجميع بقراءة الدعوات والأخبار والإشعارات
    match /weddings/{wedding} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /news/{item} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /notifications/{notification} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /reminders/{reminder} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
